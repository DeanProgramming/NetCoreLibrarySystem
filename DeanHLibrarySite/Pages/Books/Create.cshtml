@page
@model DeanHLibrarySite.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a new Entry</h1>
 
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookTable.Type" class="control-label"></label>
                <select asp-for="BookTable.Type" asp-items="Model.AvailableBookTypes" class="form-control"></select>
                <span asp-validation-for="BookTable.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookTable.Title" class="control-label"></label>
                <input asp-for="BookTable.Title" class="form-control" />
                <span asp-validation-for="BookTable.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookTable.Author" class="control-label"></label>
                <input asp-for="BookTable.Author" class="form-control" />
                <span asp-validation-for="BookTable.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookTable.Genre" class="control-label"></label>
                <input asp-for="BookTable.Genre" class="form-control" />
                <span asp-validation-for="BookTable.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookTable.PublicationYear" class="control-label"></label>
                <input asp-for="BookTable.PublicationYear" class="form-control" />
                <span asp-validation-for="BookTable.PublicationYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookTable.Description" class="control-label"></label>
                <input asp-for="BookTable.Description" class="form-control" />
                <span asp-validation-for="BookTable.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
